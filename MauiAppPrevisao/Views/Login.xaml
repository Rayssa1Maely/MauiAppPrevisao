<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPrevisao.Views.Login"
             Title="Login">
    
    <VerticalStackLayout
        VerticalOptions="Center"
        Spacing="10"
        Padding="20">

            <Label 
                FontFamily="Poppins-ExtraBold.tff"
                FontSize="50"
                Text="Login"
                HorizontalOptions="Center" />

            <Label Text="Email: " />
            <Entry x:Name="txt_email" Placeholder="Digite seu email"/>

            <Label Text="Senha:" />
            <Entry x:Name="txt_senha" IsPassword="True" Placeholder="Digite sua senha"/>

        <Button Text="Entrar"
                Clicked="Button_Clicked"
                HorizontalOptions="Center" />

        <Label 
            Text="NÃ£o tem uma conta? Cadastre-se"
            HorizontalOptions="Center"
            TextColor="Blue">

            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Label.GestureRecognizers>
        </Label>
        
    </VerticalStackLayout>
</ContentPage>